Sub ReplaceWithSequence()
    Dim rng As Range
    Dim cell As Range
    Dim sequenceNumber As Long
    
    ' 獲取選中的範圍
    Set rng = Selection
    
    ' 初始化序列號
    sequenceNumber = 1
    
    ' 只遍歷選中範圍的第一列
    For Each cell In rng.Columns(1).Cells
        ' 檢查是否是數字
        If IsNumeric(cell.Value) And cell.Value <> "" Then
            ' 如果是數字，替換為序列號
            cell.Value = sequenceNumber
            ' 序列號遞增
            sequenceNumber = sequenceNumber + 1
        End If
    Next cell
End Sub
